<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="SnowMan_GUI.MainWindow"
        Width="400" Height="600"
        Title="SnowMan Hangman"
        Background="DarkBlue">
  <StackPanel Margin="20">
    
    <TextBlock x:Name="WordText" FontSize="24" TextAlignment="Center" Margin="0,0,0,10"/>
    
    <Canvas x:Name="SnowmanCanvas" Width="200" Height="300">
      <!-- Bottom -->
      <Ellipse x:Name="BottomBase" Width="100" Height="50" Fill="White" Stroke="Black" StrokeThickness="2" Canvas.Left="50" Canvas.Top="200" IsVisible="False"/>
      <!-- Middle -->
      <Ellipse x:Name="MiddleBase" Width="80" Height="40" Fill="White" Stroke="Black" StrokeThickness="2" Canvas.Left="60" Canvas.Top="160" IsVisible="False"/>
      <!-- Head -->
      <Ellipse x:Name="Head" Width="50" Height="50" Fill="White" Stroke="Black" StrokeThickness="2" Canvas.Left="75" Canvas.Top="110" IsVisible="False"/>
      <!-- Left Arm -->
      <Line x:Name="LeftArm" StartPoint="60,170" EndPoint="20,140" Stroke="Brown" StrokeThickness="3" IsVisible="False"/>
      <!-- Right Arm -->
      <Line x:Name="RightArm" StartPoint="140,170" EndPoint="180,140" Stroke="Brown" StrokeThickness="3" IsVisible="False"/>
      <!-- Hat -->
      <Rectangle x:Name="Hat" Width="60" Height="20" Fill="Black" Canvas.Left="70" Canvas.Top="90" IsVisible="False"/>
    </Canvas>

    <TextBlock x:Name="MessageText" FontSize="16" TextAlignment="Center" Margin="0,10"/>
    <TextBlock Name="GuessedLettersText"
           FontSize="14"
           Margin="10"
           Text="Guessed: " />
    
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
    <TextBox x:Name="InputBox"
            Width="100"
            Height="30"
            KeyDown="InputBox_KeyDown"/>
    <Button x:Name="GuessButton"
        Content="Guess"
        Click="GuessButton_Click"
        Margin="5,0"/>

    <Button Content="New Game" Click="NewGameButton_Click"/>
    </StackPanel>


  </StackPanel>
</Window>
